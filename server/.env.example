NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/invoice_app?schema=public"

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET="your-secret-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# SMS Provider (for OTP)
# Options: console (dev), springedge (prod)
SMS_PROVIDER=console
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# SpringEdge SMS Gateway (production)
SPRING_EDGE_API_KEY_ID=your-springedge-api-key
SPRING_EDGE_SENDER=SEDEMO

# Razorpay (for plan subscriptions)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Google Cloud Storage (for logo uploads)
# Option 1: Full service-account JSON key (recommended)
GOOGLE_CLOUD_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","client_email":"...","private_key":"..."}'
# Option 2: Individual fields (override JSON key values if both set)
# GCS_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-gcs-bucket-name
