NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/invoice_app?schema=public"

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET="your-secret-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# SMS Provider (for OTP)
# Options: console (dev), twilio (prod)
SMS_PROVIDER=console
SMS_API_KEY=your-twilio-account-sid
SMS_API_SECRET=your-twilio-auth-token

# Razorpay (for plan subscriptions)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
